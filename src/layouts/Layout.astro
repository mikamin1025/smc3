---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../style/reset.css";
import "../style/style.css";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v6.1.2/css/all.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=M+PLUS+1p&family=PT+Sans+Narrow:wght@700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    /* background: #fff; */
    background-color: #ede3da;
    color: #125135;
    font-family: -apple-system, BlinkMacSystemFont, "ヒラギノ角ゴ Pro W3",
      "Hiragino Kaku Gothic ProN", FP-HiraKakuProN-W6, メイリオ, Meiryo,
      sans-serif;
    overflow-x: hidden;
  }
</style>
